    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
  </head>

  <body>
    <%= render "home/topbar" %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <%= render "home/sidebar" %>
        </div><!--/span-->
        <div class="span9">
          <%= yield %>  
        </div>
      </div><!--/row-->
      <hr>
      <footer>
        <p>&copy; Company 2012</p>
      </footer>
    </div><!--/.fluid-container-->
  </body>
